extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box
        h1= name
        p= description

      .project-tech-links-box.box
        h6 Technologies
        ul
          each tech in technologies 
            li= tech

        a.btn-link(href=`${liveLink}` target='_blank') Live Demo
        a.btn-link(href=`${repo}` target='_blank') GitHub Repo

    .project-img-box.box
      each img in images 
        img.project-img(src=`${img}`, alt='')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
